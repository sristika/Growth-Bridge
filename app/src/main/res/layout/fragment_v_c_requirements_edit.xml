<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="12dp">

    <EditText
        android:id="@+id/title_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter title" />

    <TextView
        android:id="@+id/required_field_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Field of interest:"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/required_field_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/interestedFields"
        android:paddingLeft="12dp" />


    <EditText
        android:id="@+id/budget_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter your budget"
        android:inputType="number" />


    <EditText
        android:id="@+id/contact_info_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter your email"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/project_requirements_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="top"
        android:hint="Enter your project requirements"
        android:inputType="textMultiLine"
        android:lines="5" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Update" />

</LinearLayout>
